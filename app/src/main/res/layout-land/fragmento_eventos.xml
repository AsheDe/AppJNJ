<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBlanco"
    tools:context=".Actividad_Evento"
    android:id="@+id/frg_presentacion"
    >






    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="0dp"

        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/rel_video"
        app:layout_constraintEnd_toStartOf="@+id/scond_const"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginBottom="60dp"
        app:layout_constraintBottom_toBottomOf="parent"


        >
        <ImageView
            android:id="@+id/video_monsennor"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@mipmap/foto19"
            android:scaleType="fitXY"
            />

        <ImageView
            android:id="@+id/playvideo_monsennor"
            android:layout_width="120dp"
            android:layout_height="120dp"
            app:srcCompat="@drawable/ic_play_circle"
android:visibility="gone"
            android:layout_centerInParent="true"
            />
    </RelativeLayout>

    <android.support.constraint.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="60dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/rel_video"
        android:id="@+id/scond_const"
        >

        <ImageView
            android:src="@mipmap/agosto1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/fecha_2_ago"
            app:layout_constraintBottom_toTopOf="@+id/fecha_3_ago"
            android:layout_height="0dp"
            android:layout_width="0dp"
            android:id="@+id/fecha_1_ago"
            android:padding="4dp"
            />


    <ImageView
        android:src="@mipmap/agosto2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/fecha_1_ago"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/fecha_3_ago"
        android:layout_height="0dp"
        android:layout_width="0dp"
        android:id="@+id/fecha_2_ago"
        android:padding="4dp"
        />

    <ImageView
        android:src="@mipmap/agosto3"
        app:layout_constraintTop_toBottomOf="@+id/fecha_1_ago"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/fecha_4_ago"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="0dp"
        android:layout_width="0dp"
        android:id="@+id/fecha_3_ago"
        app:layout_constraintVertical_bias="0.2"
        android:padding="4dp"
        />

    <ImageView
        android:src="@mipmap/agosto4"
        app:layout_constraintTop_toBottomOf="@+id/fecha_1_ago"
        app:layout_constraintLeft_toRightOf="@+id/fecha_1_ago"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="0dp"
        android:layout_width="0dp"
        android:id="@+id/fecha_4_ago"
        app:layout_constraintVertical_bias="0.2"
        android:padding="4dp"
        />
    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>