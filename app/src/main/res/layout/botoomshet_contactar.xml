<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		android:orientation="vertical"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:paddingBottom="4dp"
        android:paddingTop="4dp"
		>

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:gravity="left"
            android:id="@+id/textcontact"
            android:layout_marginBottom="4dp"
            android:textSize="16sp"
            android:textStyle="bold"
			android:text="Contáctenos"
    />

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="32dp"
		android:text="CONTACTOS PARA ASESORES"
		android:layout_marginLeft="16dp"
		android:gravity="left|center_vertical"
		app:layout_constraintTop_toBottomOf="@+id/textcontact"
		app:layout_constraintLeft_toRightOf="@+id/imgllamar"
		android:id="@+id/contllamarASESORES"
		android:layout_marginTop="16dp"
		android:textSize="16sp"
		/>


	<TextView
			android:layout_width="wrap_content"
			android:layout_height="32dp"
			android:text="INFORMACIÓN JÓVENES"
			android:layout_marginLeft="16dp"
			android:gravity="left|center_vertical"
            app:layout_constraintTop_toBottomOf="@+id/contllamarASESORES"
			app:layout_constraintLeft_toRightOf="@+id/imgllamar"
			android:id="@+id/contllamar"
			android:layout_marginTop="16dp"
			android:textSize="16sp"
			/>

	<TextView
		android:id="@+id/verfacebook"
		android:layout_width="wrap_content"
		android:layout_height="32dp"
		android:layout_marginLeft="16dp"
		android:layout_marginTop="24dp"
		android:gravity="left|center_vertical"
		android:text="VER FACEBOOK"
		app:layout_constraintLeft_toRightOf="@+id/imgllamar"
		app:layout_constraintTop_toBottomOf="@+id/contllamar" />

	<TextView
		android:id="@+id/veryoutube"
		android:layout_width="wrap_content"
		android:layout_height="32dp"
		android:layout_marginLeft="16dp"
		android:layout_marginTop="16dp"
		android:gravity="left|center_vertical"
		android:text="VER YOUTUBE"
		app:layout_constraintLeft_toRightOf="@+id/imgllamar"
		app:layout_constraintTop_toBottomOf="@+id/verfacebook" />


	<ImageView
			android:layout_width="32dp"
			android:layout_height="32dp"
			app:srcCompat="@drawable/illamar"
			android:layout_marginLeft="16dp"
			app:layout_constraintLeft_toLeftOf="parent"
			android:gravity="left"
			android:id="@+id/imgllamarASESORES"
			android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textcontact"

    />

	<ImageView
		android:layout_width="32dp"
		android:layout_height="32dp"
		app:srcCompat="@drawable/illamar"
		android:layout_marginLeft="16dp"
		app:layout_constraintLeft_toLeftOf="parent"
		android:gravity="left"
		android:id="@+id/imgllamar"
		android:layout_marginTop="16dp"
		app:layout_constraintTop_toBottomOf="@+id/imgllamarASESORES"

		/>

	<ImageView
			android:layout_width="32dp"
			android:layout_height="32dp"
			app:srcCompat="@mipmap/facebook"
			android:layout_marginLeft="16dp"
			app:layout_constraintLeft_toLeftOf="parent"
			android:gravity="left"
			app:layout_constraintTop_toBottomOf="@+id/imgllamar"
			android:id="@+id/imgfacebook"
			android:layout_marginTop="24dp"
			/>


	<ImageView
		android:id="@+id/imgyoutube"
		android:layout_width="32dp"
		android:layout_height="32dp"
		android:layout_marginLeft="16dp"
		android:layout_marginTop="16dp"
		android:gravity="left"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/imgfacebook"
		app:srcCompat="@mipmap/youtube" />
</android.support.constraint.ConstraintLayout>
